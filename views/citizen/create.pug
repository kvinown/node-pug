extends ../layouts/master

block content
    div.content-header
        div.container-fluid
            div.row.mb-2
                div.col-sm-6
                    h1.m-0 Create Penduduk
                div.col-sm-6
                    ol.breadcrumb.float-sm-right
                        li.breadcrumb-item
                            a(href="#") Dashboard
                        li.breadcrumb-item
                            a(href="#") Kartu Keluarga Page
                        li.breadcrumb-item.active Kartu Keluarga New Data
    div.content
        div.container-fluid
            div.card
                div.card-body
                    form(method="POST" action="/citizen/store")
                        div.form-group
                            label(for="nik") NIK
                            input.form-control(type="text",name="nik", id="nik", placeholder="NIK Citizen", required, autofocus="true" maxlength="15")
                        div.form-group
                            label(for="nama") Nama
                            input.form-control(type="text",name="nama", id="nama", placeholder="Contoh: John Doe", required, autofocus="false" maxlength="100")
                        div.form-group
                            label(for="alamat") Alamat
                            input.form-control(type="text",name="alamat", id="alamat", placeholder="Contoh: Jl A no 1", required, autofocus="false" maxlength="100")
                        div.form-group
                            label(for="tgl_lahir") Tanggal Lahir
                            input.form-control(type="date",name="tgl_lahir", id="tgl_lahir", placeholder="Contoh: John Doe", required, autofocus="false" maxlength="100")
                        div.form-group
                            label(for="gol_darah") Golongan Darah 
                            select(name="gol_darah")
                                option(value="A") A
                                option(value="B") B
                                option(value="AB") AB
                                option(value="O") O
                        div.form-group
                            label(for="agama") Agama
                            input.form-control(type="text",name="agama", id="agama", placeholder="agama", required, autofocus="false" maxlength="100")
                        div.form-group
                            label(for="status") Status
                            select(name="status")
                                option(value="Menikah") Menikah 
                                option(value="Belum Menikah") Belum Menikah 
                        div.form-group
                            label(for="kartu_keluarga_id") ID Kartu Keluarga
                            select(name="kartu_keluarga_id")
                                each familyCard in familyCards
                                    option(value=`${familyCard.id}`) #{familyCard.kepala_keluarga}


                        button.btn.btn-primary(type="submit") Submit



